#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Change to frontend-nextjs directory and run checks
cd frontend-nextjs

# Run ESLint
echo "ğŸ“ Running ESLint..."
if ! npm run lint; then
    echo "âŒ ESLint failed! Please fix the linting errors before committing."
    exit 1
fi

# Run TypeScript type checking
echo "ğŸ”§ Running TypeScript type checking..."
if ! npm run typecheck; then
    echo "âŒ TypeScript type checking failed! Please fix the type errors before committing."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"